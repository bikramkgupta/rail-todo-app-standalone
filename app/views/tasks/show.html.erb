<% content_for :title, @task.title %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card">
      <div class="card-header bg-<%= @task.completed? ? 'success' : 'info' %> text-white">
        <h3 class="mb-0">
          <% if @task.completed? %>
            <i class="bi bi-check-circle-fill"></i>
          <% else %>
            <i class="bi bi-circle"></i>
          <% end %>
          <%= @task.title %>
        </h3>
      </div>
      <div class="card-body">
        <h5 class="card-subtitle mb-3 text-muted">Description:</h5>
        <p class="card-text"><%= @task.description.present? ? @task.description : "No description provided." %></p>

        <hr>

        <div class="row">
          <div class="col-sm-6">
            <strong>Status:</strong>
            <% if @task.completed? %>
              <span class="badge bg-success">Completed</span>
            <% else %>
              <span class="badge bg-warning text-dark">Pending</span>
            <% end %>
          </div>
          <div class="col-sm-6">
            <strong>Created:</strong>
            <%= @task.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <div>
          <%= link_to tasks_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left"></i> Back
          <% end %>
          <%= link_to edit_task_path(@task), class: "btn btn-primary" do %>
            <i class="bi bi-pencil"></i> Edit
          <% end %>
        </div>
        <%= button_to @task, method: :delete, class: "btn btn-danger",
            form: { data: { turbo_confirm: "Are you sure you want to delete this task?" } } do %>
          <i class="bi bi-trash"></i> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
