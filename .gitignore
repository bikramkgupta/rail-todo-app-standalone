# Ignore bundler config.
/.bundle

# Ignore all environment files.
/.env*
!/.env.example

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
!/tmp/storage
!/tmp/storage/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage files.
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore master key for decrypting credentials and more.
/config/master.key
/config/credentials/*.key

# Ignore SQLite databases.
/*.sqlite3
/*.sqlite3-*
/storage/*.sqlite3
/storage/*.sqlite3-*

# Ignore node_modules
/node_modules

# Ignore precompiled assets
/public/assets
/app/assets/builds/*
!/app/assets/builds/.keep

# Ignore bootsnap cache
/tmp/cache

# Ignore Kamal secrets
/.kamal/secrets

# macOS
.DS_Store

# Editor directories
/.vscode
/.idea
